<link rel="stylesheet" href="/css/home.css" />
<!-- Main container -->
<% if(locals.user) {%>
<div class="main-container">
  <!-- Main container left side -->
  <div class="main-container-left">
    <!-- Add student form -->
    <div class="student-add-list-form">
      <label class="form-label">Add Student Form</label>
      <form method="post" action="/students/add" id="allocate-form">
        <div class="form-group">
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Email"
            required
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="name"
            id="name"
            placeholder="Name"
            required
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="college"
            id="college"
            placeholder="College"
            required
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="status"
            id="status"
            placeholder="Status"
            required
          />
        </div>
        <input type="submit" id="add-student" value="Add Student" />
      </form>
      <!-- Student List -->
      <form>
        <table class="student-list">
          <caption>
            Student List
          </caption>
          <thead>
            <tr>
              <th>Email</th>
              <th>Name</th>
              <th>College</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% for(student of students){ %>
            <tr>
              <td><%=student.email%></td>
              <td><%=student.name%></td>
              <td><%=student.college%></td>
              <td><%=student.status%></td>
            </tr>
          </tbody>
          <% } %>
        </table>
      </form>
    </div>
  </div>
  <!-- right part -->
  <div class="main-container-right">
    <!-- Add student form -->
    <div class="interview-add-list-form">
      <label class="form-label">Add Interview Form</label>
      <form method="post" action="/interviews/add">
        <div class="form-group">
          <input
            type="text"
            name="company_name"
            id="company_name"
            placeholder="Company Name"
            required
          />
        </div>
        <div class="form-group">
          <input
            type="date"
            name="interview_date"
            id="interview_date"
            placeholder="Interview Date"
            required
          />
        </div>

        <input type="submit" id="add-interview" value="Add Interview" />
      </form>

      <!-- Interview List -->
      <form method="post" action="/interviews/allocate">
        <table class="interview-list">
          <caption>
            Interview List
          </caption>
          <thead>
            <tr>
              <th>Company Name</th>
              <th>Interview Date</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% for(interview of interviews){ %>
            <tr>
              <td>
                <a href="/interviews/interview/<%=interview._id%>"
                  ><%=interview.company_name%></a
                >
              </td>
              <td>
                <%= moment(interview.interview_date).format( 'DD-MM-YYYY', )%>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </form>
    </div>
  </div>
</div>

<% } %>
